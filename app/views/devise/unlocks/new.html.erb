<div class="card col-lg-7 mt-4" style="margin: 0 auto">
  <div class="card-header bg-primary text-white text-center">
    <h2 class="mb-0">Resend unlock instructions</h2>
  </div>
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: '' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: '' %>
        <div class="invalid-feedback">
          Please enter a valid email.
        </div>
      </div>

      <div class="form-group mt-3">
        <%= f.submit "Resend unlock instructions", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
